<section class="px-4">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-3xl text-center font-bold text-main-yellow">TÃ©moignages</h2>
            <h3 class="text-xl text-gray-900 text-center p-3 ">Ils nous ont fait confiance, ils en parlent...</h3>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% temoignages.forEach(temoignage => { %>
                <div class="bg-white rounded-xl shadow-lg p-8 transform hover:scale-105 transition duration-300">
                    <div class="flex items-center mb-6">
                        <img src="<%= temoignage.image %>" alt="<%= temoignage.name %>" 
                             class="w-16 h-16 rounded-full object-cover mr-4">
                        <div>
                            <h4 class="font-bold text-lg text-main-blue"><%= temoignage.name %></h4>
                            <p class="text-gray-600"><%= temoignage.role %></p>
                        </div>
                    </div>
                    <p class="text-gray-700 italic">"<%= temoignage.text %>"</p>
                </div>
            <% }) %>
        </div>
    </div>
</section>