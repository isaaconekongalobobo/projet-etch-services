<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl text-center font-bold text-main-yellow">Contactez nous</h1>
    
    <form action="/contact" id="contact" method="POST" class="bg-slate-200 rounded-3xl shadow-sm p-8 mt-8 mb-16 ">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <input 
                    type="text" 
                    name="nom" 
                    placeholder="Nom complet"
                    required
                    class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
            </div>
            <div>
                <input 
                    type="email" 
                    name="email" 
                    placeholder="Adresse email"
                    required
                    class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
            </div>
        </div>
        
        <div class="mb-6">
            <input 
                type="text" 
                name="objet" 
                placeholder="Objet"
                required
                class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>
        
        <div class="mb-6">
            <textarea 
                name="message" 
                placeholder="Message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-3xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
            ></textarea>
        </div>
        
        <div class="text-center">
            <button 
                type="submit"
                class="px-8 py-3 bg-[#C5A02D] hover:bg-[#b08e28] text-white rounded-full transition-colors duration-200"
            >
                Envoyer
            </button>
        </div>
    </form>
</div>